<h1>All pets at <%= @shelter.name %>:</h1>
<% @pets.each do |pet| %>
  <div>
      <img src="<%= pet.image %>">
      <p>
        <b><a href="/shelters/<%= @shelter_id %>/pets/<%= pet.id %>">
          Name: <%= pet.name %>
        </a></b><br>
        Age: <%= pet.age %><br>
        Sex: <%= pet.sex %><br>
      </p>
  </div>
<% end %>
